mixin createOptions(list)
    - for (var i = 0; i < list.length; i++)
        option(value="#{i+1}")= list[i]

mixin createTable(dict)
    table
        tr
            each head in ['Название', 'Тип', 'Первый полет', 'Длина', 'Размах крыла', 'Макс. скорость']
                th= head
        each item in dict
            tr
                each field in Object.values(item)
                    td= field