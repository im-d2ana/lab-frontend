mixin createMenu(menu, active)
    each value, key in menu 
        if active == key 
            a.active(href= value)= key 
        else
            a(href= value)= key

mixin createMenuRuslan(menu, active)
    if menu['Главная']
        a(href= menu['Главная'])= 'Главная'
    
    a.active(href= "#")= active 

    each value, key in menu 
        if key != 'Главная'
            a(href= value)= key

mixin createGallery(imageList)
    - var images = imageList.slice(0, 6)
    each image, index in images
        - var className = 'gallery__image--pos' + (index + 1)

        if image == 'image5.jpg'
            a(href="ruslan.html" class=className)
                img(class="gallery__image" src=require(`../images/${image}`) alt="Рисунок " + (index + 1))

        else
            div(class=className)
                img(class="gallery__image" src=require(`../images/${image}`) alt="Рисунок " + (index + 1))

