textColor = black

border-color(col)
    border solid thin col

html
    font-size 1.1vw

    @media (max-width: 800px)
        font-size 1em

nav
    text-align right

    & a
        display inline-block
        text-decoration none
        color textColor
        font-weight bold
        font-size 1.2em
        padding 1%

        &:hover,
        &.active
            color white
            background lightskyblue

.logo
    display flex
    background lightskyblue
    padding 0.3vw
    margin auto

    &__title
        color white
        font-size 1.5em

.gallery
    display grid
    width 90%
    height 25vw
    margin 1vw auto
    grid-template-rows repeat(3, 1fr)
    grid-template-columns repeat(3, 1fr)

    > div
        overflow hidden

    @media (max-width: 800px)
        display flex
        flex-direction column
        height auto

    &__image
        width 100%
        height 100%
        object-fit cover
        transition transform 0.3s ease

        &:hover
            transform scale(1.05)

        &--pos1
            grid-area 1/1/3/3
    
        &--pos2
            grid-area 1/3/2/4

        &--pos3
            grid-area 2/3/3/4

        &--pos4
            grid-area 3/1/4/2
        
        &--pos5
            grid-area 3/2/4/3

        &--pos6
            grid-area 3/3/4/4

.container
    display grid
    width 90%
    height 40vw
    margin 1vw auto
    grid-row-gap 0.5vw
    grid-column-gap 1vw
    grid-template-rows repeat(4, 1fr)
    grid-template-columns 1fr 1fr 0.75fr

    @media (max-width: 800px)
        display flex
        flex-direction column
        height 455vw

    &__section
        border-radius 20px

        &--pos1
            grid-area 1/1/3/2
            border-color(lightblue)

        &--pos2
            grid-area 1/2/3/3
            border-color(lightpink)

        &--pos3
            grid-area 3/1/5/2
            border-color(lightgreen)

        &--pos4
            grid-area 3/2/5/3
            border-color(lightskyblue)

        &--pos5
            grid-area 1/3/5/4
            border-color(lightgrey)

.content-block
    width 100%
    height 100%
    text-align center

    @media (max-width: 800px)
        height auto

    &__text
        margin 0.5vw

    &__img
        width 95%
        height 30%
        object-fit cover
        border-radius 20px
        margin-top 0.5vw
        transition transform 0.3s ease

        &:hover
            transform scale(1.05)

    &__link
        float left
        margin 0.5vw
        color brown

        &:hover
            color lightgreen

        &--right
            float right

.mini-block
    width 98%
    height 22%
    margin 0.2vw auto
    paddin 1vw

    &__img
        float right
        width 45%
        height 95%
        object-fit cover
        margin-left 1vw
        transition transform 0.3s ease

        &:hover
            transform scale(1.05)

    &__title
        text-align right

    &__text
        text-align justify

    &__button
        float right
        background lightskyblue
        border solid thin lightgrey
        border-radius 5px
        color white

        &:hover
            background lightgreen

.ruslan-block
    display flex
    flex-direction column
    align-items center
    width 100%
    margin 1vw auto
    height 68vw

    @media (max-width: 800px)
        height auto

    &__img
        width 50%
        height 40vw
        object-fit cover
        transition transform 0.3s ease

        &:hover
            transform scale(1.05)

    &__text
        margin 0 1vw
        font-size 1.3vw

        @media (max-width: 800px)
            font-size 1em

details
    margin 2vw
    font-size 1.2vw

    @media (max-width: 800px)
        font-size 1em

table
    border 1px solid lightgrey
    width 80%
    text-align center
    margin 0 auto

    & td,
    & th
        border 1px solid lightgrey
        padding 10px

footer
    & p
        margin 0 2vw